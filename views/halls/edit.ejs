<% layout('layouts/boilerplate.ejs') %>

<div class="row">
    <div class="col-md-6 offset-md-3 mb-4">
        <div class="card shadow">
        <div class="card-body">
        <h5 class="card-title">Edit hall</h5>
        <form action="/halls/<%=foundhall._id%>/edit?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title:</label>
                <input class="form-control" type="text" id="title" name="hall[title]" value="<%=foundhall.title %>" required>
                <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location:</label>
                <input class="form-control" type="text" id="location" name="hall[location]" value="<%=foundhall.location %>" required>
                <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Add Images:</label>
                <input type="file" class="form-control" id="image" name="image" multiple>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">hall Price:</label>
                <div class="input-group">
                    <span class="input-group-text" id="price">$</span>
                    <input type="text" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price" name="hall[price]" value="<%=foundhall.price%>" required>
                </div>
                <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="hall[description]" required><%=foundhall.description%></textarea>
                <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="mb-3">
                <%foundhall.images.forEach(function(img,i){%>
                    <img src="<%=img.thumbnail %>" alt="" class="img-thumbnail">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i %>" name="deleteImages[]" value="<%=img.filename%>">
                    </div>
                    <label for="image-<%=i %>">Delete?</label>
                <%})%>
            </div>
            <div class="d-grid gap-2">
                <button class="btn btn-success btn-block">Save</button>
            </div>
        </form>
    </div>
    </div>
    </div>
</div>
